@model Pasajero

<h2 class="text-center my-4">Registro de Pasajero</h2>

<form asp-action="Create" method="post" class="container">
    <div class="row mb-3">
        <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Nombre" name="Nombre" maxlength="15" required />
        </div>
    </div>

    <div class="row mb-3">
        <label for="Apellido" class="col-sm-2 col-form-label">Apellido</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Apellido" name="Apellido" maxlength="15" required />
        </div>
    </div>

    <div class="row mb-3">
        <label for="Identificacion" class="col-sm-2 col-form-label">Identificación</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Identificacion" name="Identificacion" min="100000" max="999999999" required />
        </div>
    </div>

    <div class="row mb-3">
        <label for="PaisOrigen" class="col-sm-2 col-form-label">País de Origen</label>
        <div class="col-sm-10">
            <select class="form-select" id="PaisOrigen" name="PaisOrigen" required>
                <option>Argentina</option>
                <option>Bolivia</option>
                <option>Brasil</option>
                <option>Chile</option>
                <option>Perú</option>
                <option>Uruguay</option>
                <option>Otros</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label for="CodigoReserva" class="col-sm-2 col-form-label">Código de Reserva</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="CodigoReserva" name="CodigoReserva" pattern="[A-Z]{3}\d{3}" required />
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Registrar</button>
        <a href="/Pasajero/List" class="btn btn-secondary">Volver al Listado</a>
    </div>
</form>

<div class="mt-4">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>

